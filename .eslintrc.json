{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript",
        "airbnb-base"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": 0,
        "no-plusplus": 0,
        "max-len": ["error", 120],
        "consistent-return": 0,
        "no-underscore-dangle": 0,
        "no-var": 1,
        "import/extensions": 0
    }
}
